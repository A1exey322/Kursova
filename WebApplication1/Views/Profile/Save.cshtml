@model WebApplication1.ViewModels.Profile.ProfileViewModel
@{
    var textTitle = Model?.Id == 0 ? "Изменение данных" : "Добавление данных";
}

<form asp-controller="Profile" asp-action="Save" enctype="multipart/form-data">
    <input asp-for="Id" hidden />
    <div asp-validation-summary="All" style="font-size:23px; font-family:Impact, serif" class="text-danger text-center"></div>
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.Age" class="col-form-label"></label>
            <input type="text" class="form-control" asp-for="@Model.Age">
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.Address" class="col-form-label"></label>
            <input class="form-control" asp-for="@Model.Address"/>
        </div>
</form>

<style>
    label {
        color: black;
    }
</style>