@model WebApplication1.Models.PhoneBySlug


<form>
    <div class="row">
        <div class="col-md-12">
            <img src="@Model.data.phone_images[1]"
                 class="img-fluid rounded-start rounded" alt="@Model.data.phone_name">
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-4">
            <label asp-for="@Model.data.phone_name" class="col-form-label"></label>
            <input type="text" class="form-control" asp-for="@Model.data.phone_name">
        </div>
         <div class="form-group col-md-4">
            <label asp-for="@Model.data.brand" class="col-form-label"></label>
            <input class="form-control" asp-for="@Model.data.brand"/>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="@Model.data.storage" class="col-form-label"></label>
            <input class="form-control" asp-for="@Model.data.storage"/>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-12">
            <label asp-for="@Model.data.os" class="col-form-label"></label>
            <textarea type="text" class="form-control" asp-for="@Model.data.os"></textarea>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.data.brand" class="col-form-label"></label>
            @*<option value="@Model.data.brand">@Model.data.brand</option>*@
            <input class="form-control" asp-for="@Model.data.brand"/>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.data.release_date" class="col-form-label"></label>
            <input class="form-control" asp-for="@Model.data.release_date"/>
        </div>
    </div>
    <form asp-action="LikeDevice" asp-controller="User">
                        <input style="display: none" type="number" name="Id" value="@Model.data.brand" />
                        <input style="display: none" type="text" name="Name" value="@Model.data.phone_name" />
                        @*<input style="display: none" type="text" name="Country" value="@item.Country" />
                        <input style="display: none" type="text" name="Region" value="@item.Region" />
                        <input style="display: none" type="number" name="Population" value="@item.Population" />
                        <input style="display: none" type="text" name="Latitude" value="@item.Latitude" />
                        <input style="display: none" type="text" name="Longitude" value="@item.Longitude" />*@
                        <input class="dws-submit" type="submit" value="Add" />
    </form>
</form>
<style>
    label {
        color: black;
    }
</style>


